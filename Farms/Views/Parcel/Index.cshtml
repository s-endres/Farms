<script>
    $(document).ready(function () {
        $.urlParam = function (name) {
            var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.href);
            return results[1] || 0;
        }

        $('.glyphicon-plus-sign').on('click', function () {
            window.location.replace("http://localhost:56892/Parcel/Create?farmId=" + $.urlParam('farmId'));
        });

        $('#myDT tbody').on('click', '.glyphicon-remove-sign', function () {
            var myRow = $(this).parents('tr');
            var myIndex = $Table.row(myRow).index();
            var dtData = $Table
                .row(myIndex)
                .data();

            $.ajax({
                type: "DELETE",
                url: "http://localhost:56892/Parcel/RemoveParcel",
                data: JSON.stringify({
                    parcelId: dtData.Id
                }),
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data) {
                        $Table.row(myRow).remove().draw();
                    } else {
                        alert('Wops ERROR O.O" ');
                    }
                },
                error: function () {
                    alert('Wops ERROR O.O2" ');
                }
            });
        });

        $('#myDT tbody').on('click', ".glyphicon-ok-sign", function () {
            var myRow = $(this).parents('tr');
            var myIndex = $Table.row(myRow).index();
            var d = $Table
                .row(myIndex)
                .data();
            console.log(d);
            window.location.replace("http://localhost:56892/Parcel/Edit?parcelId=" + d.Id);
        });

        $.get('http://localhost:56892/Parcel/GetAllParcelByFarmId?farmId=' + $.urlParam('farmId'), function (data) {
            console.log(data);
            setDTWithData(data);
        });
    });
    function setDTWithData(getData) {
        $Table = $('#myDT').DataTable({
            "processing": true,
            "data": getData,
            "columns": [
                { "defaultContent": "<span class='glyphicon glyphicon-minus-sign showChild'></span>" },
                { "data": "Id" },
                { "data": "Size" },
                { "data": "Description" },
                { "data": "IdFarm" },
                { "defaultContent": "<span class='glyphicon glyphicon-remove-sign'></span> <span> | </span> <span class='glyphicon glyphicon-ok-sign''></span> | </span> <span class='glyphicon glyphicon-eye-open''></span>" }
            ],
            responsive: true,
            "columnDefs": [
                {
                    "targets": [0, 4],
                    "orderable": false
                }
            ],
            "order": [[1, "asc"]]
        });
    }
</script>

