<script src="/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

<script>
    $(document).ready(function () {
        $.urlParam = function (name) {
            var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.href);
            return results[1] || 0;
        }

        $.get('http://localhost:56892/Farm/GetFarmsById?farmId=' + $.urlParam('farmId'), function (data) {
            $("#title").text($("#title").text() + " - " + data.Name);
        });

        $('#myDT tbody').on('click', '.glyphicon-eye-open', function () {
            var tr = $(this).parents('tr');
            var index = $Table.row(tr).index();
            var rowData = $Table.row(index).data();
            window.location.replace("http://localhost:56892/Plant?parcelId=" + rowData.Id);
        });

        $('.glyphicon-plus-sign').on('click', function () {
            window.location.replace("http://localhost:56892/Parcel/Create?farmId=" + $.urlParam('farmId'));
        });

        $('#myDT tbody').on('click', '.glyphicon-minus-sign', function () {
            var tr = $(this).parents('tr');
            var row = $Table.row(tr)
            var rowData = $Table.row(row.index()).data();

            if (row.child.isShown()) {
                // This row is already open - close it
                row.child.hide();
                tr.removeClass('shown');
            }
            else {
                $.ajaxSetup({ async: false });
                var rows = "";
                $.get('http://localhost:56892/Plant/GetParcelByTypeAndCount?parcelId=' + rowData.Id, function (data) {
                    $.each(data,function() {
                        rows += '<tr>' +
                            '<td>' + this.type+ '</td>' +
                            '<td>' + this.count + '</td>' +
                            '</tr>';
                    });
                });
                row.child(format(rows)).show();
                tr.addClass('shown');
            }
        });

        $('#myDT tbody').on('click', '.glyphicon-remove-sign', function () {
            var myRow = $(this).parents('tr');
            var myIndex = $Table.row(myRow).index();
            var dtData = $Table
                .row(myIndex)
                .data();

            $.ajax({
                type: "DELETE",
                url: "http://localhost:56892/Parcel/RemoveParcel",
                data: JSON.stringify({
                    parcelId: dtData.Id
                }),
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data) {
                        $Table.row(myRow).remove().draw();
                    } else {
                        alert('Wops ERROR O.O" ');
                    }
                },
                error: function () {
                    alert('Wops ERROR O.O2" ');
                }
            });
        });

        $('#myDT tbody').on('click', ".glyphicon-ok-sign", function () {
            var myRow = $(this).parents('tr');
            var myIndex = $Table.row(myRow).index();
            var d = $Table
                .row(myIndex)
                .data();
            window.location.replace("http://localhost:56892/Parcel/Edit?parcelId=" + d.Id);
        });

        $.get('http://localhost:56892/Parcel/GetAllParcelByFarmId?farmId=' + $.urlParam('farmId'), function (data) {
            setDTWithData(data);
        });
    });

    function format(data) {
        if (data == "") { return "No Plants on Parcel" }
        // `d` is the original data object for the row
        var tableHtml = '<table class="table-striped">' +
            '<tr>' +
            '<th>Type:</th>' +
            '<th>Count:</th>' +
            '</tr>';
        tableHtml += data;

        return tableHtml + '</table>';
    }

    function setDTWithData(getData) {
        $Table = $('#myDT').DataTable({
            "processing": true,
            "data": getData,
            "columns": [
                { "defaultContent": "<span class='glyphicon glyphicon-minus-sign showChild'></span>" },
                { "data": "Id" },
                { "data": "Size" },
                { "data": "Description" },
                { "defaultContent": "<span class='glyphicon glyphicon-remove-sign'></span> <span> | </span> <span class='glyphicon glyphicon-ok-sign''></span> | </span> <span class='glyphicon glyphicon-eye-open''></span>" }
            ],
            responsive: true,
            "columnDefs": [
                {
                    "targets": [0, 4],
                    "orderable": false
                }
            ],
            "order": [[1, "asc"]]
        });
    }
</script>

