
@{
    ViewBag.Title = "Plants";
}
<h2>Plants</h2>
<!DOCTYPE html>
<html>
<head>
    <!-- MetisMenu CSS -->
    <link href="/bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet">
    <!-- DataTables CSS -->
    <link href="/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet">
    <!-- DataTables Responsive CSS -->
    <link href="/bower_components/datatables-responsive/css/dataTables.responsive.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- DataTables JavaScript -->
    <script src="/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>
    <link href="/bower_components/select2/css/select2.min.css" rel="stylesheet" type="text/css">
    <script src="/bower_components/select2/js/select2.min.js"></script>
    <!-- Summernote -->
    <link href="/bower_components/summernote/css/summernote.css" rel="stylesheet" type="text/css">
    <script src="/bower_components/summernote/js/summernote.min.js"></script>
</head>
<body>
    <script>
        $("document").ready(function () {


            $SummerNote = $("#Summernote").summernote({
                height: 125,
                codemirror: { theme: 'monokai' }
            });//Inicialize the Text Area

            $.urlParam = function (pName) {
                var results = new RegExp('[\?&]' + pName + '=([^&#]*)').exec(window.location.href);
                return results[1] || 0;
            }
            var ParcelObject = { parcelId: $.urlParam("parcelId") };
            
            $("#EditRow").click(function () {


                ObjEdit = {

                    Id: $("#Id").val(),
                    Name: $("#Name").val(),
                    Description: $SummerNote.code(),
                    PlantedDate: $("#PlantedDate").val(),
                    PlantType: $("#SelectPlantType").val(),
                    Buttons: "<span class='glyphicon glyphicon-remove-circle'></span> |" + " <span class='glyphicon glyphicon-ok-circle'></span>"
                };
                if (ValidateModal() && ValidateSelect() && ValidateTextAreaModal && ValidateModalDate()) {
                    $.ajax({
                        type: "PUT",
                        url: "http://localhost:56892/Plant/UpdatePlant",
                        data: JSON.stringify(ObjEdit),
                        dataType: "json",
                        contentType: 'application/json; charset=utf-8',
                        success: function (pData) {
                            $.get("http://localhost:56892/PlantType/GetTypePlantById", { plantTypeId: pData.PlantType }, function (PData) {
                                console.log(PData);
                                ObjEdit.Planttype = PData.Name;

                            });
                            $Table
                                .row($("#hidden").val())
                                .data(ObjEdit)
                                .draw();
                            CloseModal();


                        },
                        error: function () {
                            console.log("Jaja Salu2");
                            WarningMessage();
                        }
                    });//Close AJAX PUT For Edit
                }
            });//Edit Function

            $.ajax({
                type: "GET",
                url: "http://localhost:56892/PlantType/GetAllPlantTypes",
                data: "",
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (pData) {
                    if (pData) {
                        $.each(pData, function () {

                            $("#SelectPlantType").append('<option value="' + this.Id + '">' + this.Name + '</option>');
                        })
                    }
                    else {

                        if (!$('div[class="alert-danger"]').length) {
                            $(".form-group").prepend('<div class="alert alert-danger"><strong>Omaiga!</strong>Something went wrong</div>');
                        }
                    }

                },
                error: function () {
                    WarningMessage();
                }
            });//Close AJAX GET Types

            $.ajaxSetup({ async: false });
            $.ajax({
                type: "GET",
                url: "http://localhost:56892/Plant/GetAllPlantsByParcelId",
                data: ParcelObject,
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (pData) {
                    $.ajax({ async: false });
                    for (var i = 0; i < pData.length; i++) {
                        $.get("http://localhost:56892/PlantType/GetTypePlantById", { plantTypeId: pData[i].PlantType }, function (PData) {
                            console.log(PData);
                            pData[i].Planttype = PData.Name;

                        });      
                    }
                    $Table = $("#MainTable").DataTable({
                        "processing": true,
                        "data": pData,
                        "columns": [

                            { "data": "Id" },
                            { "data": "Name" },
                            { "data": "Description" },
                            { "data": "PlantedDate" },
                            { "data": "Planttype" },
                            { "defaultContent": "<span class='glyphicon glyphicon-remove-circle'></span> |" + " <span class='glyphicon glyphicon-ok-circle'></span> |" + " <span class='glyphicon glyphicon-unchecked'></span>" }
                        ],
                        responsive: true,
                        "columnDefs":
                        [
                            {
                                "targets": [0, 5],
                                "sortable": false
                            }
                        ],
                        "order": [[1, "asc"]],

                    });//Inicialize the Data Table

                },
                error: function () {
                    WarningMessage();
                }
            });//Close AJAX GET



            $("tbody").on("click", ".glyphicon-ok-circle", function () {
                $("#myModal").modal();
                $("#AddPlant").css("display", "none");
                $("#EditRow").css("display", "inline");

                var Row = $(this).parents("tr");
                var Index = $Table.row(Row).index();
                var Data = $Table.row(Index).data();

                $("#Id").val(Data.Id);
                $("#Name").val(Data.Name);
                $SummerNote.code(Data.Description);
                $("#PlantedDate").val(Data.PlantedDate);
                $("#PlantType").val(Data.PlantType);
                $("#hidden").val(Index);

            });//Opens the edit Modal

            $("tbody").on("click", ".glyphicon-remove-circle", function () {
                var Row = $(this).parents("tr");
                var Index = $Table.row(Row).index();
                $("#hidden3").val(Index);
                var IdVal = $Table.row(Row).data().Id;
                $("#hidden2").val(IdVal);
                $("#myDeleteModal").modal();
            });//Opens up the Delete modal confirmation

            $("#YesDelete").click(function () {

                $.ajax({
                    type: "DELETE",
                    url: "http://localhost:56892/Plant/RemovePlant",
                    data: JSON.stringify({ plantId: $Table.row($("#hidden2").val()).data().Id }),
                    dataType: "json",
                    contentType: 'application/json; charset=utf-8',
                    success: function (Data) {

                        if (Data) {
                            $Table.row($("#hidden3").val()).remove().draw();
                            $("#myDeleteModal").modal("hide");
                        }
                        else {
                            if (!$('div[class="alert-danger"]').length) {
                                $("#myDT").prepend('<div class="alert alert-danger">< strong > Omaiga!</strong >Failed deleting the row ToT</div >');
                            }
                        }
                    },
                    error: function () {
                        WarningMessage();
                    }
                });//Close Delete Ajax

            })//Confirmation Modal Delete;

            $("#NoDelete").click(function () {

                $("#myDeleteModal").modal("hide");

            });//Confirmation Modal

            $("#AddPlant").click(function () {
                if (ValidateModal() && ValidateSelect() && ValidateTextAreaModal() && ValidateModalDate()) {

                    $.ajax({
                        type: "POST",
                        url: "http://localhost:56892/Plant/AddPlant",
                        data: JSON.stringify({
                            Name: $("#Name").val(),
                            Description: $SummerNote.code(),
                            PlantedDate: $("#PlantedDate").val(),
                            PlantType: $("#SelectPlantType").val(),
                            IdParcel: $.urlParam("parcelId")
                        }),
                        dataType: "json",
                        contentType: 'application/json; charset=utf-8',
                        success: function (pData) {
                            console.log(pData.Id);
                            var ObjPostData = {
                                Id: pData.Id,
                                Name: $("#Name").val(),
                                Description: $SummerNote.code(),
                                PlantedDate: $("#PlantedDate").val(),
                                PlantType: $("#SelectPlantType").val(),
                                IdParcel: "<span class='glyphicon glyphicon-remove-circle'></span> |" + " <span class='glyphicon glyphicon-ok-circle'></span>"
                            }
                            $.get("http://localhost:56892/PlantType/GetTypePlantById", { plantTypeId: ObjPostData.PlantType }, function (PData) {
                                console.log(PData);
                                ObjPostData.Planttype = PData.Name;

                            });
                            console.log(ObjPostData);
                            $Table
                                .row
                                .add(ObjPostData)
                                .draw();
                            CloseModal();
                        },
                        error: function () {

                        }
                    });//Close AJAX POST
                }
            });//Close Add function

        });//Close Document Ready

        /*********************************************FUNCTIONS AREA**********************************************/

        function OpenModal() {
            $("#myModal").modal();
            $("#EditRow").css("display", "none");
            $("#AddPlant").css("display", "inline");
            $("#Id").css("display", "none");
            $(".modal-content .form-control").not(".hidden").not(".hidden2").val("");
            $SummerNote.code("");
            $(".HideId").css("display", "none");
        }//Opens the modal

        function CloseModal() {
            $("#myModal").modal("hide");
        }//Closes the modal

        function WarningMessage() {
            if (!$('div[class="alert-danger"]').length) {
                $("#MaintTable").prepend('<div class="alert alert-danger">< strong > Omaiga!</strong >Something went wrong >:O</div >');
            }
        }//Close Warning Message function

        function ValidateTextAreaModal() {
            if ($SummerNote.code() === "<p><br></p>" || $SummerNote.code() === "") {
                $(".ValidationModal").prepend('<div class="alert alert-danger"><strong>Omaiga!</strong> You can create a Farm without description >:3</div>');
                return false;
            }
            return true;
        }//Validates the text Area (MODAL)

        function ValidateModal() {
            var Error = true;

            if ($("#Name").val().trim() == "") {
                $("#Name").addClass("Error");

                Error = false;
            }
            else {
                $("#Name").removeClass("Error");
            }
            return Error;
        }

        function ValidateModalDate() {
            var Error = true;

            if ($("#PlantedDate").val().trim() == "") {
                $("#PlantedDate").addClass("Error");

                Error = false;
            }
            else {
                $("#PlantedDate").removeClass("Error");
            }
            return Error;
        }//Close Validation function

        function ValidateSelect() {
            if ($("#SelectPlantType").val() == null) {
                $(".Form-Class").prepend('<div class="alert alert-danger"><strong>Omaiga!</strong> You can insert a plant without a Type >:o </div>');
                return false;
            }
            return true;

        }//Validates the select

    </script>
    <style>
        #hidden {
            display: none;
        }

        #hidden2 {
            display: none;
        }

        #hidden3 {
            display: none;
        }
        .Error {
            border: solid 1px red;
        }
    </style>


    <!------------------------------------------MAIN TABLE------------------------------------------>
    Add Plant | <span><button id="AddPlantButton" class="btn btn-success btn btn-default glyphicon glyphicon-plus-sign" type="button" onclick="OpenModal()"></button></span>
    <table id="MainTable" class="table table-striped table-bordered Form-Class" cellspacing="0">
        <thead>
            <tr>
                <th>
                    <label>ID</label>
                </th>
                <th>
                    <label>Name</label>
                </th>
                <th>
                    <label>Description</label>
                </th>
                <th>
                    <label>Planted Date</label>
                </th>
                <th>
                    <label>Plant Type</label>
                </th>
                <th>
                    <label>Buttons</label>
                </th>
            </tr>
        <tbody></tbody>
        </thead>
    </table>
    <!------------------------------------------MAIN TABLE------------------------------------------>
    <!------------------------------------------MODAL------------------------------------------>
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header" style="padding:35px 50px;">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4><span class="glyphicon glyphicon-add"></span> Edit Plant Information :3</h4>
                </div>
                <div class="modal-body ValidationModal" id="modal-body" style="padding:40px 50px;">

                    <form role="form">

                        <div class="form-group HideId">
                            <label for="usrname"><span class="glyphicon glyphicon-user"></span> Id</label>
                            <input type="text" class="form-control NewOne " id="Id" readonly>
                        </div>
                        <div class="form-group">
                            <label for="usrname"><span class="glyphicon glyphicon-user"></span> Name</label>
                            <input type="text" class="form-control NewOne" id="Name">
                        </div>
                        <div class="form-group">
                            <label for="usrname"><span class="glyphicon glyphicon-user"></span> Description</label>
                            <textarea id="Summernote"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="usrname"><span class="glyphicon glyphicon-user"></span> Planted Date</label>
                            <input type="date" class="form-control NewOne" id="PlantedDate">
                        </div>
                        <div class="form-group">
                            <label for="usrname"><span class="glyphicon glyphicon-user"></span> Plant Type</label>
                            <select class="form-control NewOne" id="SelectPlantType"></select>
                        </div>

                        <input type="text" id="hidden">
                    </form>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success btn-block" id="AddPlant"><span class="glyphicon glyphicon-record"></span> Add the Plant</button>
                    <button type="submit" class="btn btn-success btn-block Display" id="EditRow"><span class="glyphicon glyphicon-record"></span> Edit the row</button>
                    <button type="submit" class="btn btn-success btn-block" id="CloseModal" onclick="CloseModal()"><span class="glyphicon glyphicon-remove-circle"></span> Cancel </button>
                </div>
            </div>


        </div>
    </div>
    <!------------------------------------------MODAL------------------------------------------>
    <!------------------------------------DELETE MODAL------------------------------------->
    <div class="modal fade" id="myDeleteModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header" style="padding:35px 50px;">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4><span class="glyphicon glyphicon-add"></span>Delete this row ????</h4>
                </div>
                <div class="modal-body" style="padding:40px 50px;">
                    <div class="alert alert-danger"><strong> Mah gosh </strong>Do you really want to delete this ??</div>
                </div>
                <input id="hidden2" type="text">
                <input id="hidden3" type="text">
                <div class="modal-footer">

                    <button type="submit" class="btn btn-success btn-block Display" id="YesDelete"><span class="glyphicon glyphicon-record"></span>Yes, i want to delete this</button>
                    <button type="submit" class="btn btn-success btn-block" id="NoDelete"><span class="glyphicon glyphicon-remove-circle"></span>No, it was a mistake</button>
                </div>
            </div>


        </div>
    </div>
    <!------------------------------------DELETE MODAL------------------------------------->
    </div>

    </div>
</body>
</html>