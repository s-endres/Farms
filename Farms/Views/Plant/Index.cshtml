<h2 id="h2Title">Plants</h2>

<script>
    $(document).ready(function () {

        //<!--DataTables  Initialization -- >
        $table = $('#myDT').DataTable({
            responsive: true,
            "columnDefs": [{ "targets": [5], "orderable": false }]
        });

        $summernote = $(".summernote").summernote({
            height: 150,   //set editable area's height
            codemirror: { // codemirror options
                theme: 'monokai'
            }
        });


        //<--Event jQuery -->


        $("#myModal").on('hidden.bs.modal', function () {
            $("#HiddenIndexDelete").val("");
            $("#indexId").val("");
            $("#modalName").val("");
            $summernote.code("");
            $("#Add").css("display", "inline");
            $("#edit").css("display", "none");
            $("#HiddenId").css("display", "none");
            $("#titleModel").text("Add new Row to table");
        });


        $.urlParam = function (name) {
            var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.href);
            return results[1] || 0;
        }

        $("#yesDelete").click(function () {
            $.ajax({
                type: "DELETE",
                url: "http://localhost:56892/Plant/RemovePlant",
                data: JSON.stringify({ plantId: $("#HiddenIndexDelete").val() }),
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {

                    if (data) {

                        $table.row($("#indexId").val()).remove().draw();
                        ValidateMyAlert("Class='alert alert-success'", ' Complete', 'Success', "#alertContainer")

                    }

                    else {
                        ValidateMyAlert("Class='alert alert-warning'", ' Could not delete ', 'Warning', "#alertContainer")
                    }

                },

                error: function () {
                    ValidateMyAlert("Class='alert alert-danger'", 'error', 'Danger', "#alertContainer")
                }

            });

            $("#closeDeleteModal").click();
        })


        $.ajax({
            type: "GET",
            url: "http://localhost:56892/Parcel/GetParcel",
            data: { parcelId : $.urlParam("parcelId") },
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                $("#h2Title").text("Parcel - " + data.Description);
            },

            error: function () {
                ValidateMyAlert("Class='alert alert-danger'", 'error', 'Danger', "#alertContainer");
            }

        });


        $.ajax({
            type: "GET",
            url: "http://localhost:56892/Plant/GetAllPlantsByParcelId",
            data: { parcelId: $.urlParam("parcelId") },
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
     
                $.each(data, function () {
                    var array = [
                        this.Id,
                        this.Name,
                        this.Description,
                        this.PlantedDate,
                        this.PlantType,
                        "<button type=\"button\" data-toggle='modal' data-target='#DeleteModal' class=\"glyphicon glyphicon-trash\" onclick = \"removeRow(this)\"></button>" +
                        "<button type=\"button\"  data-toggle='modal' data-target='#myModal' onclick =\"editRow(this)\" class = \"glyphicon glyphicon-pencil\"></button>" 
                    ]
                    $table.row.add(array).draw();
                });
            },

            error: function () {
                ValidateMyAlert("Class='alert alert-danger'", 'error', 'Danger', "#alertContainer");
            }

        });

    });


    function AddPlant() {
        if (validateMyModal()) {

            $.ajax({
                type: "POST",
                url: "http://localhost:56892/Plant/AddPlant",
                data: JSON.stringify({
                    Name: $("#modalName").val(),
                    Description: $summernote.code(),
                    PlantedDate: $("#modalPlantedDate").val(),
                    IdParcel: $.urlParam("parcelId"),
                    PlantType: $("#modalPlantType").val()
                }),
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {

                    if (data) {
                        var array = [
                            data.Id,
                            data.Name,
                            data.Description,
                            data.PlantedDate,
                            data.PlantType,
                            "<button type=\"button\" data-toggle='modal' data-target='#DeleteModal' class=\"glyphicon glyphicon-trash\" onclick = \"removeRow(this)\"></button>" +
                            "<button type=\"button\"  data-toggle='modal' data-target='#myModal' onclick =\"editRow(this)\" class = \"glyphicon glyphicon-pencil\"></button>" 
                        ]
                        $table.row.add(array).draw();
                        $("#closeMyModal").click();
                    }
                    else {

                        ValidateMyAlert("Class='alert alert-warning'", 'Could not be added', 'Warning', "#alertContainer");
                    }

                },

                error: function () {
                    ValidateMyAlert("Class='alert alert-danger'", 'error', 'Danger', "#alertContainer");
                }

            });
        }
    }

    function removeRow(button) {

        var actualRow = $(button).parents("tr");
        var rowIndex = $table.row(actualRow).index();
        var row = $table.row(rowIndex).data()
        $("#HiddenIndexDelete").val(row[0]);
        $("#indexId").val(rowIndex)
    }


    function editRow(button) {

        $("#Add").css("display", "none");
        $("#edit").css("display", "inline");
        $("#HiddenId").css("display", "inline");
        $("#titleModel").text("Edit Row");
        var ActualRow = $(button).parents("tr");
        var rowIndex = $table.row(ActualRow).index();
        var row = $table.row(rowIndex).data()
        $("#plantId").val(row[0]);
        $("#modalName").val(row[1]);
        $summernote.code(row[2]);
        $("#modalPlantedDate").val(row[3]);
        $("#modalPlantType").val(row[4]);
        $("#indexId").val(rowIndex);
    }
    function editFarmBotton() {
        if (validateMyModal()) {
            $.ajax({
                type: "PUT",
                url: " http://localhost:56892/Plant/UpdatePlant",
                data: JSON.stringify({
                    Id: $("#plantId").val(),
                    Name: $("#modalName").val(),
                    Description: $summernote.code(),
                    PlantedDate: $("#modalPlantedDate").val(),
                    IdParcel: $.urlParam("parcelId"),
                    PlantType: $("#modalPlantType").val()
                }),
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data) {
                        var array = [                     
                            data.Id,
                            data.Name,
                            data.Description,
                            data.PlantedDate,
                            data.PlantType,
                            "<button type=\"button\" data-toggle='modal' data-target='#DeleteModal' class=\"glyphicon glyphicon-trash\" onclick = \"removeRow(this)\"></button>" +
                            "<button type=\"button\"  data-toggle='modal' data-target='#myModal' onclick =\"editRow(this)\" class = \"glyphicon glyphicon-pencil\"></button>" 
                        ];
                        $table.row($("#indexId").val()).data(array).draw();
                        $("#closeMyModal").click();

                        $("#closeMyModal").click();
                    }
                    else {
                        ValidateMyAlert("Class='alert alert-warning'", 'Something is wrong', 'Warning', "#alertContainer")
                    }

                },

                error: function () {
                    ValidateMyAlert("Class='alert alert-danger'", 'Error whith edit', 'Danger', "#alertContainer")
                }

            });
        }
    }

    //Validations
    function ValidateMyAlert(pClass, pString, tMessege, insertSide) {

        if (!$("p[" + pClass + "]").length) {
            $("p[class='alert']").remove();
            $(insertSide).prepend("<p " + pClass + "><strong>" + tMessege + "</strong> " + pString + " </p>");
        }

    }

    function validateMyModal() {
        var cellEmty = true;

        if ($(".HiddenIndex").val().trim() == "" || $summernote.code() == "" || $summernote.code() == "<p><br></p>" || $("input[type='date']").val().trim() == "") {
            $("#warningModal").css("display", "inline");
            cellEmty = false;
        }

        else {
            $("#warningModal").css("display", "none");
        }


        return cellEmty;
    }


</script>

