<script>

    $(document).ready(function () {

        //<!--DataTables  Initialization -- >
        $table = $('#myDT').DataTable({
            responsive: true,
            "order": [[1, "asc"]],
            "columnDefs": [{ "targets": [0, 4], "orderable": false }]
        });

        $summernote = $(".summernote").summernote({
            height: 150,   //set editable area's height
            codemirror: { // codemirror options
                theme: 'monokai'
            }
        });


        //<--Event jQuery -->


        $("#myModal").on('hidden.bs.modal', function () {
            $("#HiddenIndexDelete").val("");
            $("#indexId").val("");
            $("#modalName").val("");
            $summernote.code("");
            $("#Add").css("display", "inline");
            $("#edit").css("display", "none");
            $("#HiddenId").css("display", "none");
            $("#titleModel").text("Add new Row to table");
        });

        $("#DeleteModal").on('hidden.bs.modal', function () {
            $("#HiddenIndexDelete").val("");
            $("#indexId").val("");
        });


        $("#yesDelete").click(function () {
            $.ajax({
                type: "DELETE",
                url: "http://localhost:56892/Farm/RemoveFarm",
                data: JSON.stringify({ farmId: $("#HiddenIndexDelete").val() }),
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {

                    if (data) {

                        $table.row($("#indexId").val()).remove().draw();
                        ValidateMyAlert("Class='alert alert-success'", ' Complete', 'Success', "#alertContainer")

                    }

                    else {
                        ValidateMyAlert("Class='alert alert-warning'", ' Could not delete ', 'Warning', "#alertContainer")
                    }

                },

                error: function () {
                    ValidateMyAlert("Class='alert alert-danger'", 'error', 'Danger', "#alertContainer")
                }

            });

            $("#closeDeleteModal").click();
        })


        $.ajax({
            type: "GET",
            url: "http://localhost:56892/Farm/GetAllFarms",
            data: "",
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {

                $.each(data, function () {

                    var array = [
                        "<td> <button type=\"button\" class=\"glyphicon glyphicon-plus\" onclick = \"ShowChild(this)\"></button> </td>",
                        this.Id,
                        this.Name,
                        this.Description,
                        "<button type=\"button\" data-toggle='modal' data-target='#DeleteModal' class=\"glyphicon glyphicon-trash\" onclick = \"removeRow(this)\"></button>" +
                        "<button type=\"button\" data-toggle='modal' data-target='#myModal' onclick =\"editRow(this)\" class = \"glyphicon glyphicon-pencil\"></button>" +
                        "<button type=\"button\" onclick =\"windowParcel(this)\" class = \"glyphicon glyphicon-eye-open\"> </button>"
                    ];
                    $table.row.add(array).draw();
                });

            },

            error: function () {
                ValidateMyAlert("Class='alert alert-danger'", 'error', 'Danger', "#alertContainer");
            }

        });
    })

    function AddFarm() {
        if (validateMyModal()) {

            console.log($("#modalName").val() + $summernote.code());
            $.ajax({
                type: "POST",
                url: "http://localhost:56892/Farm/AddFarm",
                data: JSON.stringify({
                    Name: $("#modalName").val(),
                    Description: $summernote.code()
                }),
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {

                    if (data) {
                        var array = [
                            "<td> <button type=\"button\" class=\"glyphicon glyphicon-plus\" onclick = \"ShowChild(this)\"></button> </td >",
                            data.Id,
                            data.Name,
                            data.Description,
                            "<button type=\"button\" data-toggle='modal' data-target='#DeleteModal' class=\"glyphicon glyphicon-trash\" onclick = \"removeRow(this)\"></button>" +
                            "<button type=\"button\"  data-toggle='modal' data-target='#myModal' onclick =\"editRow(this)\" class = \"glyphicon glyphicon-pencil\"></button>" +
                            "<button type=\"button\"  onclick=\"windowParcel(this)\" class = \"glyphicon glyphicon-eye-open\"> </button>"
                        ];
                        $table.row.add(array).draw();
                        $("#closeMyModal").click();
                    }
                    else {

                        ValidateMyAlert("Class='alert alert-warning'", 'Could not be added', 'Warning', "#alertContainer");
                    }

                },

                error: function () {
                    ValidateMyAlert("Class='alert alert-danger'", 'error', 'Danger', "#alertContainer");
                }

            });
        }
    }

    function removeRow(button) {

        var actualRow = $(button).parents("tr");
        var rowIndex = $table.row(actualRow).index();
        var row = $table.row(rowIndex).data()
        $("#HiddenIndexDelete").val(row[1]);
        $("#indexId").val(rowIndex)
    }


    function editRow(button) {

        $("#Add").css("display", "none");
        $("#edit").css("display", "inline");
        $("#HiddenId").css("display", "inline");    
        $("#titleModel").text("Edit Row");
        var ActualRow = $(button).parents("tr");
        var rowIndex = $table.row(ActualRow).index();
        var row = $table.row(rowIndex).data()
        $("#FarmId").val(row[1]);
        $("#modalName").val(row[2]);
        $summernote.code(row[3]);
        $("#indexId").val(rowIndex);
    }
    function editFarmBotton() {
        if (validateMyModal()) {
            $.ajax({
                type: "PUT",
                url: " http://localhost:56892/Farm/UpdateFarm",
                data: JSON.stringify({
                    Id: $("#FarmId").val(),
                    Name: $("#modalName").val(),
                    Description: $summernote.code()
                }),
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data) {
                        var array = [
                            "<td> <button type=\"button\" class=\"glyphicon glyphicon-plus\" onclick = \"ShowChild(this)\"></button> </td >",
                            data.Id,
                            data.Name,
                            data.Description,
                            "<button type=\"button\" data-toggle='modal' data-target='#DeleteModal' class=\"glyphicon glyphicon-trash\" onclick = \"removeRow(this)\"></button>" +
                            "<button type=\"button\"  data-toggle='modal' data-target='#myModal' onclick =\"editRow(this)\" class = \"glyphicon glyphicon-pencil\"></button>" +
                            "<button type=\"button\" onclick =\"windowParcel(this)\" class = \"glyphicon glyphicon-eye-open\"> </button>"
                        ];
                        $table.row($("#indexId").val()).data(array).draw();
                        $("#closeMyModal").click();

                        $("#closeMyModal").click();
                    }
                    else {
                        ValidateMyAlert("Class='alert alert-warning'", 'Something is wrong', 'Warning', "#alertContainer")
                    }

                },

                error: function () {
                    ValidateMyAlert("Class='alert alert-danger'", 'Error whith edit', 'Danger', "#alertContainer")
                }

            });
        }
    }
    function windowParcel(button) {
        console.log("asd");
        var actualRow = $(button).parents("tr");
        var rowIndex = $table.row(actualRow).index();
        var row = $table.row(rowIndex).data()
        window.location.replace('http://localhost:56892/Parcel?farmId=' + row[1] );
    }

    //Validations
    function ValidateMyAlert(pClass, pString, tMessege, insertSide) {

        if (!$("p[" + pClass + "]").length) {
            $("p[class='alert']").remove();
            $(insertSide).prepend("<p " + pClass + "><strong>" + tMessege + "</strong> " + pString + " </p>");
        }

    }

    function validateMyModal() {
        var cellEmty = true;
        if ($("#modalName").val().trim() == "" || $summernote.code() == "" || $summernote.code() == "<p><br></p>") {
            $("#warningModal").css("display", "inline");    
            cellEmty = false;
        }

        else {
            $("#warningModal").css("display", "none");
            console.log($summernote.code());
        }


        return cellEmty;
    }

    function changeClass(input, classRemove, classAdd) {
        input.removeClass(classRemove);
        input.addClass(classAdd);
    }

    function cleanModalForm() {
        $(".HiddenIndex ").val("");
        $(".HiddenIndex ").removeClass("Error");
    }

</script>

