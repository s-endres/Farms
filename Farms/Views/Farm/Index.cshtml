
@{
    ViewBag.Title = "Farms";
}
<!-- MetisMenu CSS -->
<link href="/bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet">
<!-- DataTables CSS -->
<link href="/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet">
<!-- DataTables Responsive CSS -->
<link href="/bower_components/datatables-responsive/css/dataTables.responsive.css" rel="stylesheet">
<!-- Custom Fonts -->
<link href="/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
<!-- DataTables JavaScript -->
<script src="/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $.get('http://localhost:56892/Farm/GetAllFarms', function (data) {
            console.log(data);
            setDTWithData(data);
        });

        $('#exampleModal').on('hidden.bs.modal',
            function() {
                cleanModalForm();
            });

        $('#myDT tbody').on('click', '.glyphicon-remove-sign', function () {
            var myRow = $(this).parents('tr');
            var myIndex = $Table.row(myRow).index();
            var dtData = $Table
                .row(myIndex)
                .data();

            $.ajax({
                type: "DELETE",
                url: "http://localhost:56892/Farm/RemoveFarm",
                data: JSON.stringify({
                    farmId: dtData.Id
                }),
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data) {
                        $Table.row(myRow).remove().draw();
                    } else {
                        alert('Wops ERROR O.O" ');
                    }
                },
                error: function () {
                    alert('Wops ERROR O.O2" ');
                }
            });
        });

        $('#myDT tbody').on('click', '.glyphicon-ok-sign', function () {
            var myRow = $(this).parents('tr');
            var myIndex = $Table.row(myRow).index();
            var d = $Table
                .row(myIndex)
                .data();

            $('#exampleModal').modal('show');

            $('#btnEdit').css('display', 'inline');
            $('#btnSave').css('display', 'none');

            $("#Id").text(d.Id);
            $("#Name").val(d.Name);
            $("#Description").val(d.Description);
            $("#hiddenValue").val(myIndex);
        });

    }); // End Ready
    function setDTWithData(getData) {
        $Table = $('#myDT').DataTable({
            "processing": true,
            "data": getData,
            "columns": [
                { "defaultContent": "<span class='glyphicon glyphicon-minus-sign showChild'></span>" },
                { "data": "Id" },
                { "data": "Name" },
                { "data": "Description" },
                { "defaultContent": "<span class='glyphicon glyphicon-remove-sign'></span> <span> | </span> <span class='glyphicon glyphicon-ok-sign''></span>" }
            ],
            responsive: true,
            "columnDefs": [
                {
                    "targets": [0,4],
                    "orderable": false
                }
            ],
            "order": [[1, "asc"]]
        });
    }

    function cleanModalForm() {
        $('#btnEdit').css('display', 'none');
        $('#btnSave').css('display', 'inline');
        $("#modalForm div input[type='text']").val("");

        $("#modalForm div input[type='text']").each(function () {
            $(this).parent("div").removeClass("has-error");
        })
    }

    //Start Modal Logic

    function addMyInfo() { //Como limpiamos este codigo?
        $.ajax({
            type: "POST",
            url: "http://localhost:56892/Farm/AddFarm",
            data: JSON.stringify({
                Name: $("#Name").val(),
                Description: $("#Description").val()
            }),
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (data != false) {
                    $Table.row.add(data).draw();
                    $("#btnCancel").click();
                } else {
                    alert('Wops ERROR O.O" ');
                }
            },
            error: function () {
                alert('Wops ERROR O.O" ');
            }
        });
    }

    function editMyInfo() {
        $.ajax({
            type: "PUT",
            url: "http://localhost:56892/Farm/UpdateFarm",
            data: JSON.stringify({
                Id: $("#Id").text(),
                Name: $("#Name").val(),
                Description: $("#Description").val()
            }),
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (data != false) {
                    var index = $("#hiddenValue").val();
                    $Table.row(index).data(data).draw();
                    $("#btnCancel").click();
                } else {
                    alert('Wops ERROR O.O" ');
                }
            },
            error: function () {
                alert('Wops ERROR O.O2" ');
            }
        });
    }

</script>
<h2>Farms</h2>


<div class="row" style="padding:15px">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DataTables Advanced Tables | 
                <span class="glyphicon glyphicon-plus-sign" id="addNewRow" data-toggle="modal" data-target="#exampleModal"/>

            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="myDT">
                        <thead>
                        <tr>
                            <th>
                
                            </th>
                            <th>
                                <label>Id</label>
                            </th>
                            <th>
                                <label>Name</label>
                            </th>
                            <th>
                                <label>Description</label>
                            </th>
                            <th>
                                <label>Buttons</label>
                            </th>
                        </tr>
                        </thead>
                        <tbody>                              
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="exampleModalLabel">Add new Row to Table</h4>
            </div>
            <div id="rowModalBody" class="modal-body">
                <form id="modalForm">
                    <div class="form-group">
                        <label for="recipient-name" class="control-label">Id:</label>
                        <label id="Id"></label>
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="control-label">First input:</label>
                        <input type="text" class="form-control" id="Name">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="control-label">Second input:</label>
                        <input type="text" class="form-control" id="Description">
                    </div>
                    <input type="text" class="form-control" style="display:none" id="hiddenValue">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCancel" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" id="btnSave" class="btn btn-primary" onclick="addMyInfo()">Add Row</button>
                <button type="button" id="btnEdit" class="btn btn-primary" onclick="editMyInfo()" style="display:none">Edit</button>
            </div>
        </div>
    </div>
</div>